@{
}

@model IEnumerable<ConsoumeWEBApi.ViewModels.EmployeeVM>
<a asp-action="Create" asp-controller="Employee">Create</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Position</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Position</td>
                <td>

                    <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.Id">Edit</a>||

                    <a asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>